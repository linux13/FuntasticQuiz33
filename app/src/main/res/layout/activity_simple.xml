<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/questionbackground"
    tools:context=".Simple"
    android:id="@+id/linearlayout"
    >
    <include
        android:id="@+id/ttoolbar"
        layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/sm_question"
        android:textSize="25sp"
        android:hint="Question"
        android:textColor="#6b018e"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:paddingTop="20sp"
        android:layout_centerHorizontal="true"/>
<LinearLayout
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <Button

        android:layout_height="60dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:id="@+id/sm_btn_one"
        android:text="Button"
        android:background="@drawable/qbutton"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="5.0dip"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_two"
        android:onClick="btnone"
        />

    <Button
        android:layout_height="60dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:background="@drawable/qbutton"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/sm_btn_two"
        android:text="Button"
        android:textAllCaps="false"
        android:layout_marginTop="5.0dip"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_three"
        android:onClick="btntwo"
        />

    <Button
        android:layout_height="60dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:background="@drawable/qbutton"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/sm_btn_three"
        android:textAllCaps="false"
        android:text="Button"
        android:layout_marginTop="5.0dip"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_four"
        android:onClick="btnthree"
        />

    <Button
        android:layout_height="60dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:background="@drawable/qbutton"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="30dp"
        android:id="@+id/sm_btn_four"
        android:text="Button"
        android:textAllCaps="false"
        android:layout_marginTop="5.0dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="btnfour"
        />
    <Button
        android:onClick="smHint"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/btn_hint"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/hint_icon"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        />
</LinearLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>